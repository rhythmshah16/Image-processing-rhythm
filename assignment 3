import cv2
import numpy as np 
import random 

img = cv2.imread('B99.jpg')

print(img.shape)
width1 = 0
height1 = 0

width2 = int(980/7)
height2 = int(1480/7)

while True:
    cv2.rectangle(img,(width1,height1),(width2,height2),(random.randint(0,255)),(random.randint(0,255)),(random.randint(0,255)),-1)
    width1 += width2
    width2 += width2
    
height1 += height2
height2 += height2
cv2.imshow('image',img)

if cv2.waitkey(0) & 0xff == ord('q'):
    break;   
